local SOURCES =
    message_test.cpp
    ;

exe fat-tests :
    $(SOURCES)
    /lounge//lib-asio
    /lounge//lib-beast
    /lounge//lib-test
    :
    <include>../../server
    ;

explicit fat-tests ;

run $(SOURCES)
    /lounge//lib-asio
    /lounge//lib-beast
    /lounge//lib-test
    : : :
    <include>../../server
    : run-tests ;

explicit run-tests ;
