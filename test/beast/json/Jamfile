local SOURCES =
    _detail_stack.cpp
    allocator.cpp
    array.cpp
    assign_string.cpp
    assign_vector.cpp
    basic_parser.cpp
    error.cpp
    iterator.cpp
    json.cpp
    key_param.cpp
    kind.cpp
    number.cpp
    object.cpp
    parse_file.cpp
    parser.cpp
    serializer.cpp
    storage.cpp
    string.cpp
    value.cpp
    ;

exe fat-tests :
    $(SOURCES)
    /lounge//lib-asio
    /lounge//lib-beast
    /lounge//lib-beast-extra
    /lounge//lib-test
    ;

explicit fat-tests ;

run $(SOURCES)
    /lounge//lib-asio
    /lounge//lib-beast
    /lounge//lib-beast-extra
    /lounge//lib-test
    : : : : run-tests ;

explicit run-tests ;
